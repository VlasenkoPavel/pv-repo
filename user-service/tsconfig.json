{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators" :true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6"
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
